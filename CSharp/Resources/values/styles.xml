<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <item name="android:textColor">@android:color/white</item>
      <item name="android:textColorSecondary">#ffbbbbbb</item>
      <item name="android:windowBackground">@color/dialogs_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
      <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
      <item name="android:textColorPrimary">@android:color/white</item>
    </style>
  
    <style name="HistoryDialogTheme" parent="AppTheme">
      <item name="android:background">@color/dialogs_bg</item>
    </style>

    <style name="SettingsDialogTheme" parent="AppTheme">
      <item name="android:background">@color/dialogs_bg</item>
    </style>

</resources>
